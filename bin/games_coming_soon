    xb1: "Xbox One",
    ps4: "PlayStation 4",
    switch: "Nintendo Switch",
    quit: "Quit"
}
end

def time_period_menu_content
  {
    seven_days: "7 Days",
    fourteen_days: "14 Days",
    back_to_platform_select: "Back to Platform Selection",
